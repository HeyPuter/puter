{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "module": "node16",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "outDir": "/dev/null",
    "paths": {
      "../src/*": [
        "../src/*"
      ]
    },
    "typeRoots": [
      "../node_modules/@types"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "*.d.ts"
  ]
}