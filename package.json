    "dedent": "^1.5.3",
    "express-xml-bodyparser": "^0.4.1",
    "ioredis": "^5.6.0",
    "javascript-time-ago": "^2.5.11",
    "json-colorizer": "^3.0.1",
    "open": "^10.1.0",
    "parse-domain": "^8.2.2",
    "simple-git": "^3.25.0",
    "string-template": "^1.0.0",
    "uuid": "^9.0.1"
  },
  "optionalDependencies": {
    "sharp": "^0.34.4",
    "sharp-bmp": "^0.1.5",
    "sharp-ico": "^0.1.5"
  },
  "engines": {
    "node": ">=20.19.5"
  }
}
